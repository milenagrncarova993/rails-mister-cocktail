
<h1> Cocktails </h1>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" >
      <img src= "https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80">
      <div class="card-info">
        <%= link_to cocktail.name, cocktail_path(cocktail) %> 
        <%= link_to '🗑️' , cocktail_path(cocktail), method: :delete%>
      </div>
    </div>
  <%end %>
</div>
<%= link_to "Add a new cocktail", new_cocktail_path %>
</div>
